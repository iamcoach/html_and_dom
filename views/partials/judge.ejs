<section class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">四、判断题</h3></div>
    <div class="panel-body">
        <ol>
            <% for(var i = 0;i < allTopic.judge.length; i++) { %>
            <li>
                <p><%= allTopic.judge[i].question %></p>
                <% for(var choice in allTopic.judge[i].options) { %>
                <label><input type="radio" name="judge<%= i %>" value="<%= choice %>">
                    <%= allTopic.judge[i].options[choice] %></label><br>
                <% } %>
            </li>
            <% } %>
        </ol>
    </div>
</section>